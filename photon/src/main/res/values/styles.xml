<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.DesignDemo">

    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#155eab</item>
        <item name="colorPrimaryDark">#0d3b6c</item>
        <item name="colorAccent">#E040FB</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#F0EF9F</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="android:background">@color/mmwr_blue</item>
        <item name="tabSelectedTextColor">@android:color/white</item>

    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>>
        <item name="android:textColor">#94ACD0</item>
        <item name="android:textStyle">bold</item>
    </style>
